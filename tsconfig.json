{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist",
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
